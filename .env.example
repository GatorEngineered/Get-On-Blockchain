# Database
DATABASE_URL="postgresql://user:password@localhost:5432/getonblockchain"

# Upstash Redis (for rate limiting)
# Get these from https://console.upstash.com
UPSTASH_REDIS_REST_URL="https://your-database-name.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-upstash-redis-token-here"

# Email (Resend)
# Get API key from https://resend.com/api-keys
# IMPORTANT: You must verify your domain at https://resend.com/domains
# Domain verification requires adding DNS records (MX, TXT, DKIM)
RESEND_API_KEY="re_..."
FROM_EMAIL="Get On Blockchain <noreply@yourdomain.com>"

# Next.js
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Admin System
# Note: Admin passwords are hashed in the database
# Use the reset-admin-password script to set admin passwords

# PayPal Subscriptions API
# Get credentials from https://developer.paypal.com/dashboard/
PAYPAL_CLIENT_ID="your_paypal_client_id_here"
PAYPAL_CLIENT_SECRET="your_paypal_client_secret_here"

# PayPal API Base URL
# Sandbox: https://api-m.sandbox.paypal.com
# Production: https://api-m.paypal.com
PAYPAL_API_BASE="https://api-m.sandbox.paypal.com"

# PayPal Product & Plan IDs (generated by scripts/setup-paypal-plans.ts)
PAYPAL_PRODUCT_ID=""
PAYPAL_PLAN_BASIC_MONTHLY=""
PAYPAL_PLAN_PREMIUM_MONTHLY=""
PAYPAL_PLAN_BASIC_ANNUAL=""
PAYPAL_PLAN_PREMIUM_ANNUAL=""

# PayPal Webhook ID (from PayPal Developer Dashboard)
PAYPAL_WEBHOOK_ID=""

# Base URL for PayPal return URLs
NEXT_PUBLIC_BASE_URL="http://localhost:3000"

# Cron Job Security
# Generate a random secret: openssl rand -hex 32
# Add this same value in Vercel Dashboard > Settings > Environment Variables
CRON_SECRET="your-random-secret-here"
